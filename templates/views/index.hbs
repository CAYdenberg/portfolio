<header class="homepage-header">
	<div class="homepage-header__filter">
		<div class="row">
			<div class="column small-12 medium-8 large-6">
				<h1>Casey A. Ydenberg</h1>
				<h2>Web Developer</h2>
				<a href="/curriculum-vitae" class="button">CV</a>
			</div>
			<div class="column small-12 medium-4 large-6">
				<picture>
					<source srcset="/img/profile_sm.jpg" media="(max-width: 639px)" />
					<img src="/img/profile_lg.jpg"
						alt="Me! I love hiking and camping, and writing standards-compliant HTML"
						class="rounded-corners"
					/>
				</picture>
			</div>
		</div>
	</div>
</header>

<main class="row">

	<section class="column small-12 medium-6 homepage-section">
		<h2 class="homepage-section__title"><a href="/portfolio">Projects</a></h2>

		{{#each data.projects}}
			<ul class="homepage-portfolio embiggen">
				<li><a href="{{projectUrl slug}}" class="natural--secondary">
					<strong>{{title}}</strong> {{brief}}
				</a></li>
			</ul>
		{{/each}}

		<p>
			<a href="/portfolio">See my portfolio &rarr;</a>
		</p>
	</section>

	<section class="column small-12 medium-6 homepage-section">
		<h2 class="homepage-section__title"><a href="/blog">Blog</a></h2>

		{{#each data.posts}}
			<ul class="homepage-blog">
				<li class="embiggen"><a href="{{postUrl slug}}" class="natural--secondary">{{title}}</a></li>
			</ul>
		{{/each}}

		<p>
			<a href="/blog">See all posts &rarr;</a>
		</p>
	</section>

</main>

<footer class="homepage-footer">
	<div class="row column">
		<h2>Get in touch</h2>
		<ul class="homepage-footer__contact-list social-nav--large">
			<li><a href="/contact" title="Email"><i class="icon-mail"></i></a></li>
			<li><a href="https://github.com/CAYdenberg" target="_blank"><i class="icon-github" title="GitHub profile"></i></a></li>
			<li><a href="https://twitter.com/CAYdenberg" target="_blank"><i class="icon-twitter" title="Twitter feed"></i></a></li>
			<li><a href="https://www.linkedin.com/in/caydenberg" target="_blank"><i class="icon-linkedin" title="LinkedIn page"></i></a></li>
		</ul>
	</div>
</footer>
